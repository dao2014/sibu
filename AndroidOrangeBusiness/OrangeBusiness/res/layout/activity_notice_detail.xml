<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <WebView
        android:id="@+id/activity_notice_detail_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layerType="software"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/activity_notice_detail_webview_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_all_layout" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider" />

        <ImageView
            android:id="@+id/activity_notice_detail_webview_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_company_detail_back" />

        <ImageView
            android:id="@+id/activity_notice_detail_webview_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/activity_notice_detail_webview_backward"
            android:src="@drawable/ic_company_detail_forward" />

        <ImageView
            android:id="@+id/activity_notice_detail_webview_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_company_detail_reload" />
    </RelativeLayout>

</RelativeLayout>