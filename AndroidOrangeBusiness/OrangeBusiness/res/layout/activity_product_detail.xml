<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_product_detail_all_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <!--<com.socialbusiness.dev.orangebusiness.component.ScrollViewContainer-->
    <!--android:layout_weight="1.0"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="0dp">-->

    <ScrollView
        android:id="@+id/activity_product_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <Gallery
                android:id="@+id/activity_product_detail_goods_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:spacing="8dp"
                android:background="@color/bg_all_layout"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/top_viewpager_layout"
                android:layout_width="fill_parent"
                android:layout_height="200dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/top_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" />

                <com.socialbusiness.dev.orangebusiness.component.indicator.IconPageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">



                    <TextView
                        android:id="@+id/activity_product_detail_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="240dp"
                        android:text="No.135354"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/order_detail_small_text_size" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cell_divider"
                    android:visibility="gone" />



                <RelativeLayout
                    android:id="@+id/product_info_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/activity_product_detail_properties_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp">
                            <TextView
                                android:id="@+id/activity_product_detail_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="迷你电容式触控笔"
                                android:textSize="@dimen/order_detail_normal_text_size" />
                            <TextView
                                android:id="@+id/activity_product_detail_properties"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="产品功效：导电硅橡胶笔尖 精确触控书写 三角式外形设计方便握取 多种颜色选择 精彩数码生活"
                                android:textSize="@dimen/order_detail_small_text_size"
                                android:textColor="@color/text_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="¥ "
                                android:textColor="@color/red_product_price"
                                android:textSize="@dimen/order_detail_small_text_size"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp" />
                        <TextView
                            android:id="@+id/activity_product_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="299"
                            android:textColor="@color/red_product_price"
                            android:textSize="@dimen/order_detail_big_text_size"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/fragment_mysales_mysales_order_image_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#efefef" />

                <RelativeLayout
                    android:id="@+id/video_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/activity_product_detail_video_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_video"
                        android:textSize="@dimen/order_detail_small_text_size"
                        android:textColor="@color/text_color" />

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/activity_product_detail_video_image"
                        android:layout_width="250dp"
                        android:layout_height="140dp"
                        android:layout_below="@id/activity_product_detail_video_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/activity_product_detail_video_image_click"
                        android:layout_width="250dp"
                        android:layout_height="140dp"
                        android:layout_below="@id/activity_product_detail_video_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:src="@drawable/bg_selector_video" />
                </RelativeLayout>

                <View
                    android:id="@+id/video_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cell_divider"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/activity_product_detail_product_introduce_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_introduce"
                        android:textSize="@dimen/order_detail_small_text_size"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/activity_product_detail_product_introduce_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="这是产品介绍 导电硅橡胶笔尖 精确触控书写 三角式外形设计方便握取 多种颜色选择 精彩数码生活"
                        android:textSize="@dimen/order_detail_small_text_size"
                        android:textColor="@color/text_color_dark"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cell_divider"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/activity_product_detail_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#eeeeee"
                android:gravity="center"
                android:text="继续拖动，查看图文详情"
                android:textColor="#aaaaaa"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone" />
    <!--</ScrollView>-->
    <!--</com.socialbusiness.dev.orangebusiness.component.ScrollViewContainer>-->

    <TextView
        android:id="@+id/activity_product_detail_add_to_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_selector_no_corners"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/add_to_shopping_cart"
        android:textColor="@color/white"
        android:textSize="@dimen/order_detail_normal_text_size" />
</LinearLayout>