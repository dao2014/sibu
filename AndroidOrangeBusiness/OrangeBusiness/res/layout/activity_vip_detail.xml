<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/activity_vip_detail_layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <com.socialbusiness.dev.orangebusiness.component.CircleImageView
                android:id="@+id/view_vip_detail_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" >

                <TextView
                    android:id="@+id/activity_vip_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="加载中..."
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_vip_detail_hint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_vip_detail_name"
                    android:layout_marginTop="5dp"
                    android:text="@string/vip_detail_hint1"
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/activity_vip_detail_accumulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_vip_detail_name"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/activity_vip_detail_hint1"
                    android:text="加载中..."
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/activity_vip_detail_hint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_vip_detail_accumulation"
                    android:layout_marginTop="5dp"
                    android:text="@string/vip_detail_hint2"
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/activity_vip_detail_level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_vip_detail_accumulation"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/activity_vip_detail_hint2"
                    android:text="加载中..."
                    android:textColor="@color/text_color_dark" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_go_btn" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="8dp"
            android:background="@color/cell_divider_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_all_layout"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/activity_vip_detail_sum_image_upleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/ic_total_order_sum" />

                    <TextView
                        android:id="@+id/activity_vip_detail_total_sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/activity_vip_detail_sum_image_upleft"
                        android:gravity="center"
                        android:text="¥ 8873.2"
                        android:textColor="@color/orange_order_sum"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_vip_detail_total_sum_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_vip_detail_total_sum"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/activity_vip_detail_sum_image_upleft"
                        android:gravity="center"
                        android:text="@string/total_order_sum"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cell_divider" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/activity_vip_detail_num_image_upright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/ic_total_order_num" />

                    <TextView
                        android:id="@+id/activity_vip_detail_total_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/activity_vip_detail_num_image_upright"
                        android:gravity="center"
                        android:text="21"
                        android:textColor="@color/orange_order_sum"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_vip_detail_total_num_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_vip_detail_total_num"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/activity_vip_detail_num_image_upright"
                        android:gravity="center"
                        android:text="@string/total_order_num"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/activity_vip_detail_sum_image_downleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/ic_month_shipment_sum" />

                    <TextView
                        android:id="@+id/activity_vip_detail_month_shipments_sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/activity_vip_detail_sum_image_downleft"
                        android:gravity="center"
                        android:text="¥ 5209"
                        android:textColor="@color/orange_order_sum"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_vip_detail_month_shipments_sum_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_vip_detail_month_shipments_sum"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/activity_vip_detail_sum_image_downleft"
                        android:gravity="center"
                        android:text="@string/month_deliver_sum"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cell_divider" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/activity_vip_detail_sum_image_downright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/ic_total_shipment_sum" />

                    <TextView
                        android:id="@+id/activity_vip_detail_total_shipments_sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/activity_vip_detail_sum_image_downright"
                        android:gravity="center"
                        android:text="¥ 1929"
                        android:textColor="@color/orange_order_sum"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_vip_detail_total_shipments_sum_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_vip_detail_total_shipments_sum"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/activity_vip_detail_sum_image_downright"
                        android:gravity="center"
                        android:text="@string/total_deliver_sum"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="@string/vip_detail_by"
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <RelativeLayout
            android:id="@+id/activity_vip_detail_layout_wait_handle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_vip_detail_image_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_wait_handle_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/activity_vip_detail_image_hint1"
                android:text="@string/vip_detail_wait_handle"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/activity_vip_detail_waiting_handle_order_go_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_go_btn" />

            <TextView
                android:id="@+id/activity_vip_detail_waiting_handle_order_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/activity_vip_detail_waiting_handle_order_go_btn"
                android:background="@drawable/bg_nums"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <RelativeLayout
            android:id="@+id/activity_vip_detail_layout_wait_send"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_vip_detail_image_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_wait_shipment_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/activity_vip_detail_image_hint2"
                android:text="@string/vip_detail_wait_send"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_go_btn" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <RelativeLayout
            android:id="@+id/activity_vip_detail_layout_already_send"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_vip_detail_image_hint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_done_shipment_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/activity_vip_detail_image_hint3"
                android:text="@string/vip_detail_already_send"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_go_btn" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="@string/vip_detail_seller"
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <RelativeLayout
            android:id="@+id/activity_vip_detail_layout_already_out"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_vip_detail_image_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_done_shipment_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/activity_vip_detail_image_hint"
                android:gravity="center"
                android:text="@string/vip_detail_already_send"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_go_btn" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="@string/vip_detail_vip"
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <RelativeLayout
            android:id="@+id/activity_vip_detail_layout_layout_level"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/view_vip_detail_level_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_my_lower_level" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/view_vip_detail_level_image"
                android:text="@string/vip_detail_user_level"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_go_btn" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="3dp"
            android:background="@color/cell_divider_dark" />
    </LinearLayout>

</ScrollView>