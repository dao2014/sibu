<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_e0"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/line_model"
        android:background="@color/cell_divider_dark" />

    <LinearLayout
        android:id="@+id/expandable_listview_order_groupview_all_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expandable_listview_order_groupview_seller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="买家："
            android:textColor="@color/mall_right_text_color"
            android:textSize="@dimen/order_detail_normal_text_size" />

        <TextView
            android:id="@+id/expandable_listview_order_groupview_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="已传凭证"
            android:textColor="@color/white"
            android:background="@drawable/order_pay_state"
            android:textSize="@dimen/order_detail_normal_text_size"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/expandable_listview_order_groupview_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="下单时间："
                android:textColor="@color/order_detail_hint_color"
                android:textSize="@dimen/order_detail_normal_text_size"
                />

            <TextView
                android:id="@+id/expandable_listview_order_groupview_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_cancel_order_bg"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/cancel_order"
                android:textColor="@color/red_product_price"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:visibility="gone"
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cell_divider" />

</LinearLayout>