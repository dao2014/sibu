<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/bg_all_layout"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">


            <RelativeLayout
                android:id="@+id/fragment_mypurchase_mypurchase_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_salse_item_height"
                android:background="@drawable/sl_item_bg"
                android:clickable="true"
                android:layout_marginTop="15dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="@color/cell_divider_dark" />

                <ImageView
                    android:id="@+id/fragment_mypurchase_mypurchase_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:src="@drawable/ic_my_purchase" />

                <TextView
                    android:id="@+id/fragment_mypurchase_mypurchase_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fragment_mypurchase_mypurchase_image"
                    android:gravity="center_vertical"
                    android:text="@string/my_purchase"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/fragment_mypurchase_mypurchase_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/fragment_mypurchase_mypurchase_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/fragment_mypurchase_mypurchase_image_right"
                    android:background="@drawable/bg_nums"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/cell_divider_dark" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fragment_mypurchase_my_shopping_cart_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/sl_item_bg"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_mypurchase_my_shopping_cart_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_my_shopping_cart" />

                <TextView
                    android:id="@+id/fragment_mypurchase_my_shopping_cart_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fragment_mypurchase_my_shopping_cart_image"
                    android:gravity="center_vertical"
                    android:text="@string/my_shopping_cart"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/fragment_mypurchase_my_shopping_cart_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/fragment_mypurchase_my_shopping_cart_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/fragment_mypurchase_my_shopping_cart_image_right"
                    android:background="@drawable/bg_nums"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fragment_mypurchase_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/purchase_order"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_client_icon"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="上级"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/dotted_line_gray"
                android:layerType="software"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/fragment_mypurchase_waiting_confirm_order_layout"
                    style="@style/my_salse_item_layout_style"


                    >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fragment_mypurchase_waiting_confirm_order_image"
                            android:background="@drawable/ic_waiting_confirm"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mypurchase_waiting_confirm_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/fragment_mypurchase_waiting_confirm_order_text"
                        android:text="@string/waiting_handle"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/fragment_mypurchase_waiting_deliver_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fragment_mypurchase_waiting_deliver_order_image"
                            android:background="@drawable/ic_waiting_deliver"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mypurchase_waiting_deliver_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/fragment_mypurchase_waiting_deliver_order_text"
                        android:text="@string/waiting_deliver"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/fragment_mypurchase_receipted_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_receipted"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mypurchase_receipted_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_green" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/fragment_mypurchase_receipted_order_text"
                        android:text="@string/receipted"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/cell_divider_dark" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_me_icon"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="我"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/dotted_line_gray"
                android:layerType="software"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_mypurchase_waiting_2pay_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_waiting_pay"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mypurchase_waiting_2pay_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:text="@string/waiting_2pay"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/fragment_mypurchase_done_deliver_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_delivered"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mypurchase_done_deliver_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:text="@string/done_deliver"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/my_salse_item_layout_style"
                    android:visibility="invisible">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_delivered"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:text="@string/done_deliver"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/cell_divider_dark" />

            <RelativeLayout
                android:id="@+id/fragment_mypurchase_my_inventory_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_salse_item_height"
                android:background="@drawable/sl_item_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/fragment_mypurchase_my_inventory_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:src="@drawable/ic_stock" />

                <TextView
                    android:id="@+id/fragment_mypurchase_my_inventory_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fragment_mypurchase_my_inventory_image"
                    android:gravity="center_vertical"
                    android:text="@string/my_inventory"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/fragment_mypurchase_my_inventory_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />

            <LinearLayout
                android:id="@+id/fragment_mypurchase_acount_statement_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_salse_item_height"
                android:background="@drawable/sl_item_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/purch_account_state" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="@string/my_purchase_acount_statement"
                    android:gravity="center_vertical"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>