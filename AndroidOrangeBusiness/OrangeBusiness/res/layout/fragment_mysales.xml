<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/bg_all_layout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_salse_top_bg">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="163dp"
                    android:orientation="vertical"
                    android:background="@drawable/my_salse_top_circle_bg"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="2.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yuan_symbol"
                        android:textColor="@color/red_product_price"
                        android:textSize="@dimen/text_size_36px"
                        android:layout_gravity="center_horizontal" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="1.0" />

                    <com.socialbusiness.dev.orangebusiness.component.KWAutoScrollTextView
                        android:id="@+id/fragment_mysales_month_profit_sumTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_product_price"
                        android:textSize="@dimen/text_size_36px"
                        android:singleLine="true"
                        android:text="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="1.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_profit"
                        android:textColor="@color/red_product_price"
                        android:textSize="@dimen/order_detail_normal_text_size"
                        android:layout_gravity="center_horizontal" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        android:layout_weight="3.5" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_sales_top_arrow"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_product_price"
                            android:textSize="20sp"
                            android:text="@string/yuan_symbol"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="5dp"

                            />

                        <TextView
                            android:id="@+id/fragment_mysales_month_deliver_numsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_product_price"
                            android:textSize="@dimen/text_size_36px"
                            android:text="0"
                            android:layout_gravity="center_horizontal"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_deliver_nums"
                        android:textColor="@color/mall_right_text_color"
                        android:textSize="@dimen/order_detail_small_text_size"
                        android:layout_gravity="center_horizontal"

                        />


                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="@color/cell_divider" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_product_price"
                            android:textSize="20sp"
                            android:text="@string/yuan_symbol"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="5dp"

                            />

                        <TextView
                            android:id="@+id/fragment_mysales_month_deliver_sumTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/red_product_price"
                            android:textSize="@dimen/text_size_36px"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_deliver_sum"
                        android:textColor="@color/mall_right_text_color"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/order_detail_small_text_size" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider" />


            <TextView
                android:id="@+id/fragment_mysales_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/sales_order"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_me_icon"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="我"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/dotted_line_gray"
                android:layerType="software"

                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/fragment_mysales_waiting_confirm_order_layout"
                    style="@style/my_salse_item_layout_style"


                    >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fragment_mysales_waiting_confirm_order_image"
                            android:background="@drawable/ic_waiting_confirm"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mysales_waiting_confirm_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/fragment_mysales_waiting_confirm_order_text"
                        android:text="@string/waiting_handle"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/fragment_mysales_waiting_deliver_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fragment_mysales_waiting_deliver_order_image"
                            android:background="@drawable/ic_waiting_deliver"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mysales_waiting_deliver_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/fragment_mysales_waiting_deliver_order_text"
                        android:text="@string/waiting_deliver"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/fragment_mysales_receipted_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_receipted"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mysales_receipted_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_green" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/fragment_mysales_receipted_order_text"
                        android:text="@string/receipted"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/cell_divider_dark" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_client_icon"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="客户"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/dotted_line_gray"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_mysales_waiting_2pay_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_waiting_pay"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mysales_waiting_2pay_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:text="@string/waiting_2pay"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/fragment_mysales_done_deliver_order_layout"
                    style="@style/my_salse_item_layout_style">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_delivered"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            android:id="@+id/fragment_mysales_done_deliver_order_nums"
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:text="@string/done_deliver"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/my_salse_item_layout_style"
                    android:visibility="invisible">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ic_delivered"
                            style="@style/my_salse_item_image_style" />

                        <TextView
                            style="@style/my_salse_item_nums_style"
                            android:background="@drawable/circle_bg_my_salse_red" />
                    </FrameLayout>


                    <TextView
                        android:text="@string/done_deliver"
                        style="@style/my_salse_item_text_style" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1.0"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:id="@+id/fragment_mysales_acount_statement_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_salse_item_height"
                android:background="@drawable/sl_item_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:src="@drawable/scales_account_state"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_scale_acount_statement"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fragment_mysales_mysales_order_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_salse_item_height"
                android:background="@drawable/sl_item_bg"
                android:clickable="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cell_divider" />

                <ImageView
                    android:id="@+id/fragment_mysales_mysales_order_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_salse_item_margin_left"
                    android:src="@drawable/ic_my_retail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fragment_mysales_mysales_order_image"
                    android:gravity="center_vertical"
                    android:text="@string/mysales_order_constructing"
                    android:textColor="@color/mall_right_text_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/fragment_mysales_mysales_order_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/fragment_mysales_mysales_order_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:minWidth="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/fragment_mysales_mysales_order_image_right"
                    android:background="@drawable/circle_bg_my_salse_red"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider"
                android:layout_marginBottom="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/sales_count"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/fragment_mysales_month_deliver_nums_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_mysales_month_deliver_nums_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_month_count" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/cell_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/fragment_mysales_month_deliver_sum_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_mysales_month_deliver_sum_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_month_profit2"

                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/cell_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/fragment_mysales_month_profit_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_mysales_month_profit_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_month_profit" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cell_divider_dark" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>