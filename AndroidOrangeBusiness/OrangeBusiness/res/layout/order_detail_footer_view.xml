<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_e0"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cell_divider_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/order_detail_footerview_transport_fee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/transportation_fee"
            android:textColor="@color/mall_right_text_color"
            android:textSize="@dimen/order_detail_normal_text_size" />

        <TextView
            android:id="@+id/order_detail_footerview_money_sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/total_money_s"
            android:textColor="@color/red_product_price"
            android:textSize="@dimen/order_detail_normal_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cell_divider_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bg_e0">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/cell_divider_dark" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size" />

            <TextView
                android:id="@+id/order_detail_footerview_createtime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/order_detail_hint_color"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textSize="@dimen/order_detail_small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单单号:"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size" />

            <TextView
                android:id="@+id/order_detail_footerview_order_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/order_detail_hint_color"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textSize="@dimen/order_detail_small_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货运方式:"
                android:layout_gravity="center_vertical"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size" />

            <TextView
                android:id="@+id/order_detail_footerview_freight_way"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/order_detail_hint_color"
                android:textSize="@dimen/order_detail_small_text_size"
                android:layout_marginLeft="@dimen/order_model_left"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_detail_footerview_start_number_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货运起始单号:"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size"
                android:includeFontPadding="false"
                />

            <TextView
                android:id="@+id/order_detail_footerview_freight_start_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#12CE85"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textSize="@dimen/order_detail_small_text_size"
                android:includeFontPadding="false"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_detail_footerview_end_number_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货运终止单号:"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size" />

            <TextView
                android:id="@+id/order_detail_footerview_freight_end_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textColor="#12CE85"
                android:textSize="@dimen/order_detail_small_text_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cell_divider_dark" />

    <LinearLayout
        android:id="@+id/order_detail_footerview_buyer_remark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/order_detail_footerview_buyer_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buyer_remark"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size" />

            <TextView
                android:id="@+id/order_detail_footerview_buyer_remark_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:minLines="2"
                android:textColor="@color/order_detail_hint_color"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textColorHint="@color/gray_b3"
                android:textSize="@dimen/order_detail_small_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_footerview_seller_remark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"

            >

            <TextView
                android:id="@+id/order_detail_footerview_seller_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seller_remark"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size" />

            <TextView
                android:id="@+id/order_detail_footerview_seller_remark_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:minLines="2"
                android:textColor="@color/order_detail_hint_color"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textColorHint="@color/gray_b3"
                android:textSize="@dimen/order_detail_small_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_footerview_pays_voucher_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <View
            android:id="@+id/order_detail_footerview_pays_voucher_topline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider_dark" />

        <LinearLayout
            android:id="@+id/order_detail_footerview_pays_money_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_footerview_pays_money_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pays_money"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/order_detail_footerview_pays_money_edittext"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:textColor="@color/main_color"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textColorHint="@color/main_color" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_detail_footerview_pays_money_remark_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_detail_footerview_pays_money_remark_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pays_money_remark"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/order_detail_footerview_pays_money_remark_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="@dimen/order_model_left"
                android:textColor="@color/order_detail_hint_color"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/cell_divider"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_detail_footerview_pays_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_footerview_pays_money_layout"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/pays_voucher"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_normal_text_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <FrameLayout style="@style/pay_image_layout_style">

                        <!--<ImageView style="@style/pay_image_plus_style" />-->

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/order_detail_footerview_pays_voucher_image"
                            style="@style/pay_image_style_no_image" />

                        <Button
                            android:id="@+id/pays_voucher_image_delete"
                            style="@style/pay_image_delete_style" />
                    </FrameLayout>

                    <FrameLayout style="@style/pay_image_layout_style">

                        <!--<ImageView style="@style/pay_image_plus_style" />-->

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/order_detail_footerview_pays_voucher_image1"
                            style="@style/pay_image_style_no_image" />

                        <Button
                            android:id="@+id/pays_voucher_image_delete1"
                            style="@style/pay_image_delete_style" />
                    </FrameLayout>

                    <FrameLayout style="@style/pay_image_layout_style">

                        <!--<ImageView style="@style/pay_image_plus_style" />-->

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/order_detail_footerview_pays_voucher_image2"
                            style="@style/pay_image_style_no_image" />

                        <Button
                            android:id="@+id/pays_voucher_image_delete2"
                            style="@style/pay_image_delete_style" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <FrameLayout style="@style/pay_image_layout_style">

                        <!--<ImageView style="@style/pay_image_plus_style" />-->

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/order_detail_footerview_pays_voucher_image3"
                            style="@style/pay_image_style_no_image" />

                        <Button
                            android:id="@+id/pays_voucher_image_delete3"
                            style="@style/pay_image_delete_style" />
                    </FrameLayout>

                    <FrameLayout style="@style/pay_image_layout_style">

                        <!--<ImageView style="@style/pay_image_plus_style" />-->

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/order_detail_footerview_pays_voucher_image4"
                            style="@style/pay_image_style_no_image" />

                        <Button
                            android:id="@+id/pays_voucher_image_delete4"
                            style="@style/pay_image_delete_style" />
                    </FrameLayout>

                    <FrameLayout style="@style/pay_image_layout_style">

                        <!--<ImageView style="@style/pay_image_plus_style" />-->

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/order_detail_footerview_pays_voucher_image5"
                            style="@style/pay_image_style_no_image" />

                        <Button
                            android:id="@+id/pays_voucher_image_delete5"
                            style="@style/pay_image_delete_style" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费：¥"
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bottom_transtion_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_product_price"
                android:textSize="@dimen/order_detail_normal_text_size"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计  (含运费) ："
                android:textColor="@color/mall_right_text_color"
                android:textSize="@dimen/order_detail_small_text_size"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/bottom_total_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_product_price"
                android:textSize="@dimen/order_detail_small_text_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_detail_footerview_pays_voucher_image"
            android:background="@color/cell_divider_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_detail_footerview_upload_pays_voucher"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:text="@string/upload_pays_voucher"
        android:textColor="@color/white"
        android:textSize="@dimen/order_detail_normal_text_size" />

</LinearLayout>