<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rc_dialog"
    android:layout_width="@dimen/px_to_dip_564"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="18sp"/>


    <EditText
        android:id="@android:id/edit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_to_dip_90"
        android:layout_marginLeft="@dimen/px_to_dip_10"
        android:layout_marginRight="@dimen/px_to_dip_10"
        android:background="@drawable/rc_dialog_edit_bg"
        android:gravity="bottom"
        android:textColor="#d3d3d3"
        android:textSize="@dimen/px_to_dip_28" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@android:id/button1"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel_bj"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#666666"
            android:textSize="16sp"
            />

        <Button
            android:id="@android:id/button2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_selector"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>