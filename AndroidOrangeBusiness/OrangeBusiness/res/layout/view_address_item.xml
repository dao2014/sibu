<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_product_item_all_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sl_item_bg">

    <View
        android:id="@+id/view_address_item_space1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cell_divider"
        />

    <TextView
        android:id="@+id/view_address_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="郑员工"
        android:textSize="@dimen/order_detail_normal_text_size"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/view_address_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/view_address_item_name"
        android:paddingLeft="20dp"
        android:text="13533681601"
        android:textSize="@dimen/order_detail_normal_text_size"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/view_address_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_address_item_name"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="广州市白云区江夏北路强盛大厦c栋603A"
        android:textColor="#636363"
        android:textSize="@dimen/order_detail_small_text_size" />

    <View
        android:id="@+id/view_address_item_space2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/view_address_item_address"
        android:layout_marginTop="10dp"
        android:background="@color/cell_divider" />
    <TextView
        android:id="@+id/view_address_item_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="默认地址"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/order_detail_small_text_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@id/view_address_item_name"
        />
    <LinearLayout
        android:id="@+id/view_address_item_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/view_address_item_space2"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/view_address_item_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/address_delete"
            android:textSize="18sp"
            android:textColor="#12CE85"
            />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/cell_divider"
            android:visibility="gone"
            />



        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/cell_divider" />

        <TextView
            android:id="@+id/view_address_item_editor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sl_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/address_editor"
            android:textColor="#12CE85"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        android:id="@+id/view_address_item_space3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cell_divider"
        android:layout_below="@id/view_address_item_layout"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/view_address_item_space3"
        android:background="@color/bg_all_layout"
        />
</RelativeLayout>