<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mall_header_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/main_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#D7560F"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_product_searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/mall_search_icon" />

            <EditText
                android:id="@+id/fragment_product_input"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入产品名称进行搜索"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColorHint="#F4D6CD"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                />

            <ImageView
                android:id="@+id/search_close_clear"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_menu_close_clear_cancel"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/mall_shoping_cart_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/mall_shoping_cart" />
            <TextView
                android:id="@+id/fragment_mypurchase_my_shopping_cart_nums"
                android:layout_width="wrap_content"
                android:minWidth="18dp"
                android:maxWidth="39dp"
                android:layout_height="18dp"
                android:textColor="@color/red"
                android:background="@drawable/circle_bg_whiter"
                android:text="600"
                android:textSize="15sp"
                android:layout_gravity="top|right"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="1dp"
                />

        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#A1A1A1"
        android:visibility="gone"
        />
</LinearLayout>