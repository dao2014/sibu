<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sl_item_bg" >

    <TextView
        android:id="@+id/view_notice_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/view_notice_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_notice_item_title"
        android:layout_marginTop="2dp"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/text_color_dark" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/view_notice_item_rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_notice_item_title"
        android:layout_toRightOf="@id/view_notice_item_time"
        android:gravity="right"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/view_notice_item_put"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notice_item_put"
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/view_notice_item_issuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_notice_item_put"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/view_notice_item_time"
        android:layout_marginTop="8dp"
        android:background="@color/cell_divider" />

</RelativeLayout>