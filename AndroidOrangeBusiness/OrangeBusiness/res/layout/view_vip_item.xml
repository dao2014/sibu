<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sl_item_bg">

    <com.socialbusiness.dev.orangebusiness.component.CircleImageView
        android:id="@+id/view_vip_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/view_vip_item_image"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_vip_item_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text=""
            android:textColor="@color/text_color_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:id="@+id/view_vip_item_level"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:text=""/>

        </LinearLayout>
    <View
        android:layout_below="@id/view_vip_item_image"
        android:background="@color/cell_divider"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>