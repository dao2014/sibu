<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="tab_bar_item_base">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="tab_item_txt">
        <item name="android:textSize">@dimen/order_detail_normal_text_size</item>
        <item name="android:textColor">@drawable/sl_tab_item_txt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_bar_msg_item" parent="tab_bar_item_base">
        <item name="android:textColor">@drawable/sl_tab_item_txt</item>
        <item name="android:textSize">12dp</item>
        <item name="android:drawableTop">@drawable/sl_tab_item_message</item>
    </style>

    <style name="tab_bar_contact_item" parent="tab_bar_item_base">
        <item name="android:textColor">@drawable/sl_tab_item_txt</item>
        <item name="android:textSize">12dp</item>
        <item name="android:drawableTop">@drawable/sl_tab_item_contact</item>
    </style>

    <style name="tab_bar_order_item" parent="tab_bar_item_base">
        <item name="android:textColor">@drawable/sl_tab_item_txt</item>
        <item name="android:textSize">12dp</item>
        <item name="android:drawableTop">@drawable/sl_tab_item_order</item>
    </style>

    <style name="tab_bar_product_item" parent="tab_bar_item_base">
        <item name="android:textColor">@drawable/sl_tab_item_txt</item>
        <item name="android:textSize">12dp</item>
        <item name="android:drawableTop">@drawable/sl_tab_item_product</item>
    </style>

    <style name="tab_bar_personal_item" parent="tab_bar_item_base">
        <item name="android:textColor">@drawable/sl_tab_item_txt</item>
        <item name="android:textSize">12dp</item>
        <item name="android:drawableTop">@drawable/sl_tab_item_me</item>
    </style>

    <style name="pay_image_style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/plus</item>

        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="pay_image_style_no_image">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/plus</item>
    </style>

    <style name="pay_image_plus_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/plus</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="pay_image_layout_style">
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <!--<item name="android:background">@drawable/default_pic</item>-->
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="pay_image_delete_style">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">@drawable/appitem_del_btn</item>
        <item name="android:layout_gravity">top|right</item>
    </style>

    <style name="NormalDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="NormalDialog_1" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="my_salse_item_layout_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>

        <item name="android:paddingLeft">@dimen/my_salse_item_margin_left</item>

        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sl_item_bg</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

    </style>
    <!---->
    <style name="my_salse_item_image_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="my_salse_item_nums_style">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="my_salse_item_text_style">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#676767</item>
        <item name="android:textSize">14sp</item>

        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="bottom_btn_style">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/order_detail_normal_text_size</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/btn_selector_red</item>
    </style>

    <style name="search_layout_style">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/order_detail_big_text_size</item>

        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/product_search_bg_shape</item>
    </style>
</resources>
